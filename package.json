{
  "name": "link-canvas",
  "displayName": "Link Canvas",
  "description": "Visualize and explore code dependencies on an infinite canvas with interactive code windows.",
  "version": "0.1.3",
  "publisher": "hirokimukai",
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "canvas",
    "code visualization",
    "dependencies",
    "graph"
  ],
  "activationEvents": [
    "onView:linkCanvas.fileTree",
    "onCommand:linkCanvas.showDefinition",
    "onCommand:linkCanvas.showReferences"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "linkCanvas",
          "title": "Link Canvas",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "linkCanvas": [
        {
          "id": "linkCanvas.fileTree",
          "name": "Files"
        }
      ]
    },
    "commands": [
      {
        "command": "linkCanvas.openCanvas",
        "title": "Open Canvas"
      },
      {
        "command": "linkCanvas.showDefinition",
        "title": "Show Definition in Canvas",
        "category": "Link Canvas"
      },
      {
        "command": "linkCanvas.showReferences",
        "title": "Show References in Canvas",
        "category": "Link Canvas"
      },
      {
        "command": "linkCanvas.zoomIn",
        "title": "Zoom In",
        "category": "Link Canvas",
        "icon": "$(zoom-in)"
      },
      {
        "command": "linkCanvas.zoomOut",
        "title": "Zoom Out",
        "category": "Link Canvas",
        "icon": "$(zoom-out)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "linkCanvas.showDefinition",
          "when": "editorTextFocus"
        },
        {
          "command": "linkCanvas.showReferences",
          "when": "editorTextFocus"
        }
      ],
      "view/title": [
        {
          "command": "linkCanvas.zoomIn",
          "when": "view == linkCanvas.fileTree",
          "group": "navigation@1"
        },
        {
          "command": "linkCanvas.zoomOut",
          "when": "view == linkCanvas.fileTree",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Link Canvas",
      "properties": {
        "linkCanvas.theme": {
          "type": "string",
          "enum": ["light", "dark", "custom"],
          "default": "dark",
          "description": "テーマ設定（ライト/ダーク/カスタム）"
        },
        "linkCanvas.customTheme.backgroundColor": {
          "type": "string",
          "default": "#1e1e1e",
          "description": "カスタムテーマの背景色（テーマが'custom'の時のみ有効）"
        },
        "linkCanvas.customTheme.gridColor": {
          "type": "string",
          "default": "rgba(255, 255, 255, 0.05)",
          "description": "カスタムテーマのグリッド線の色（テーマが'custom'の時のみ有効）"
        },
        "linkCanvas.window.borderColor": {
          "type": "string",
          "default": "#cccccc",
          "description": "ウィンドウの枠線の色"
        },
        "linkCanvas.window.borderWidth": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 10,
          "description": "ウィンドウの枠線の太さ（px）"
        },
        "linkCanvas.window.borderRadius": {
          "type": "number",
          "default": 8,
          "minimum": 0,
          "maximum": 20,
          "description": "ウィンドウの角丸の大きさ（px）"
        },
        "linkCanvas.window.backgroundColor": {
          "type": "string",
          "default": "#ffffff",
          "description": "ウィンドウの背景色"
        },
        "linkCanvas.window.titleBarColor": {
          "type": "string",
          "default": "#f0f0f0",
          "description": "ウィンドウのタイトルバーの背景色"
        },
        "linkCanvas.window.shadowColor": {
          "type": "string",
          "default": "rgba(0, 0, 0, 0.15)",
          "description": "ウィンドウの影の色"
        },
        "linkCanvas.font.family": {
          "type": "string",
          "default": "",
          "description": "フォントファミリー（空の場合はVSCodeのデフォルト）"
        },
        "linkCanvas.font.size": {
          "type": "number",
          "default": 14,
          "minimum": 8,
          "maximum": 32,
          "description": "フォントサイズ（px）"
        }
      }
    }
  },
  "scripts": {
    "build": "node build.js",
    "watch": "node build.js --watch",
    "vscode:prepublish": "npm run build",
    "package": "npm run build",
    "vsce:package": "npx @vscode/vsce package",
    "vsce:publish": "npx @vscode/vsce publish -p $VSCE_PAT"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/is0692vs/link-canvas.git"
  },
  "bugs": {
    "url": "https://github.com/is0692vs/link-canvas/issues"
  },
  "homepage": "https://github.com/is0692vs/link-canvas",
  "galleryBanner": {
    "color": "#7B3FF2",
    "theme": "dark"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
